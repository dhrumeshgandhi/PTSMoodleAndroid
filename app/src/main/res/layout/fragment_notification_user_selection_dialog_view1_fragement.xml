<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationUserSelectionDialogViewsFragement">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvUserSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp"
            android:gravity="center"
            android:text="@string/notification_user_selection_choice"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinUserSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserSelection"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp" />
    </RelativeLayout>
</FrameLayout>
