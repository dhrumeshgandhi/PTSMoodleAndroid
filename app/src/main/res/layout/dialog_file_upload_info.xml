<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject">

        <EditText
            android:id="@+id/etSubejct"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tvSem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tilSubject"
        android:layout_marginTop="15dp"
        android:hint="Semester:"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinSem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tilSubject"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/tvSem"
        android:contentDescription="@string/label_login"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/tvBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tilSubject"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/spinSem"
        android:hint="Branch:"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tilSubject"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/tvBranch"
        android:gravity="center"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBranch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Next" />

</RelativeLayout>