<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDialogAddClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class">

            <EditText
                android:id="@+id/etDialogAddClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDialogAddSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tilDialogAddClass"
            android:hint="Subject">

            <EditText
                android:id="@+id/etDialogAddSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnDialogAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tilDialogAddSubject"
            android:layout_centerHorizontal="true"
            android:text="Add" />
    </RelativeLayout>

</FrameLayout>
